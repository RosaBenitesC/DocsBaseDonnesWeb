@model _4204D5_labo12.ViewModels.ImageUploadVM

<a asp-action="Index">Retour à l'index</a>
<h2>Ajouter une image à un fruit</h2>

<form asp-action="AjouterImage" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NomFruit" class="control-label"></label>
        <input asp-for="NomFruit" class="form-control" />
        <span asp-validation-for="NomFruit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="FormFile">Image PNG :</label>
        <input id="FormFile" name="FormFile" type="file" accept="image/png" class="form-control-file" />
        <span asp-validation-for="FormFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Téléverser" class="btn btn-primary" />
    </div>
</form>